<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_purple"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="64dp">

            <!-- Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/emerald_500"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/tvInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="AB"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Alex Brown"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="alex@example.com"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Stats"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="2"
                        android:rowCount="2">

                        <!-- Sessions -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_stat_card"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_target"
                                android:tint="@color/emerald_600"
                                android:contentDescription="Sessions" />

                            <TextView
                                android:id="@+id/tvSessionsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sessions"
                                android:textColor="@color/gray_600"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_stat_card"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_award"
                                android:tint="@color/purple_600"
                                android:contentDescription="Streak" />

                            <TextView
                                android:id="@+id/tvStreakCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Streak"
                                android:textColor="@color/gray_600"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Focus Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_stat_card"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_clock"
                                android:tint="@color/blue_600"
                                android:contentDescription="Focus time" />

                            <TextView
                                android:id="@+id/tvFocusTimeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0h"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus Time"
                                android:textColor="@color/gray_600"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Achievements -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_stat_card"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_trophy"
                                android:tint="@color/orange_500"
                                android:contentDescription="Achievements" />

                            <TextView
                                android:id="@+id/tvAchievementsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achievements"
                                android:textColor="@color/gray_600"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Achievements -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievements"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="3"
                        android:rowCount="2">

                        <TextView
                            android:id="@+id/achievement1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_unlocked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸŒ±\nFirst Focus"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/achievement2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_locked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸ”¥\nWeek Warrior"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/achievement3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_locked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸ†\nFocus Master"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/achievement4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_locked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="â°\nTime Lord"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/achievement5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_locked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸ§˜\nMindful Monk"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/achievement6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_achievement_locked"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="ðŸŒ¸\nBloom Expert"
                            android:textSize="10sp" />

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="Logout"
                android:textColor="#EF4444"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconTint="#EF4444"
                app:strokeColor="#FEE2E2"
                app:strokeWidth="2dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>