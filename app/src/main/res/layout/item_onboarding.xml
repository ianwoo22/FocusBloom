<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icon Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/emerald_500"
        app:cardCornerRadius="60dp"
        app:cardElevation="16dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:src="@drawable/ic_flower"
            android:tint="@android:color/white"
            android:contentDescription="Onboarding icon" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Welcome to FocusBloom"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Your personal digital well-being companion"
        android:textColor="#B3FFFFFF"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>